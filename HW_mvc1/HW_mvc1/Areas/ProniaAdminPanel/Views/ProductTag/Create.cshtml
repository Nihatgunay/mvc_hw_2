@model ProductTag

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Product-Tag Association</h4>
                        <form class="forms-sample" method="post">
                            <div class="form-group">
                                <label for="ProductId">Product ID</label>
                                <input asp-for="ProductId" class="form-control" placeholder="Enter Product ID">
                                <span class="text-danger" asp-validation-for="ProductId"></span>
                            </div>
                            <div class="form-group">
                                <label for="TagId">Tag ID</label>
                                <input asp-for="TagId" class="form-control" placeholder="Enter Tag ID">
                                <span class="text-danger" asp-validation-for="TagId"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button type="button" class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>