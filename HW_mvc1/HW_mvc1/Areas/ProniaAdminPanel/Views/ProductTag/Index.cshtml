@model List<ProductTag>
@{
    int num = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Product with Tag Table</h4>
                        <a asp-action="Create" class="btn btn-success">Create</a>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Product Name</th>
                                        <th>Tag Name</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var prdtag in Model)
                                    {
                                        num++;
                                        <tr>
                                            <td class="py-1">@num</td>
                                            <td>@prdtag.Product.Name</td>
                                            <td>@prdtag.Tag.Name</td>
                                            <td>
                                                <a class="btn btn-primary">Edit</a>
                                                <a class="btn btn-danger">Remove</a>
                                                <a class="btn btn-warning">Detail</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>